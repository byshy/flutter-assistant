<idea-plugin>
    <id>com.github.byshy.flutterassistant</id>
    <name>Flutter Assistant</name>
    <vendor email="baselhadrous99@gmail.com">byshy</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Register the inspection to detect unused BLoC events in Dart files -->
        <localInspection
                language="Dart"
                implementationClass="com.github.byshy.flutterassistant.inspections.UnusedBlocEventInspection"
                shortName="UnusedBLoCEvent"
                displayName="Detect unused BLoC event"
                groupName="Flutter assistant"
                enabledByDefault="true"/>
    </extensions>
</idea-plugin>
